{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node", "vue-router", "vitest", "vite/client", "@pinia/testing", "vitest/globals", "pinia"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "paths": {
      "@/*": [
        "src/*",
        "components/*"
      ],
      "common_ui_components/*": ["src/common_ui_components/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "tests",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "pinia.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
